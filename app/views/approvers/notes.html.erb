<div class="grey-box">
  <h2>Approver Notes Page</h2>

  <h3><%= @approver.first_name + " " + @approver.last_name %></h3>

  <div class="blue-box">
    <p>Here include all notes associated with this approver.</p>
  </div>

  <%= @approver.notes.each do |note| %>
    <h4><%= note.title %></h4>
    <p><%= note.content %></p>
    <%= link_to "Edit", edit_user_approver_note_path(current_user, @approver, note.id), class: "btn btn-transparent btn-default" %>
    <%= link_to "Delete", user_approver_note_path(current_user, @approver, note.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-transparent btn-default" %>
  <% end %>

  <%= link_to "Add Note", new_user_approver_note_path(current_user, @approver.id), class: "btn btn-transparent btn-default" %>
</div>
