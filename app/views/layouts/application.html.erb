<!DOCTYPE html>
<html>
  <head>
    <title>BrexitHedge</title>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>
  <body>
    <%= yield(:navbar) %>
    <% if params[:controller] == 'users' && params[:action] == 'show' || params[:controller] == 'users' && params[:action] == 'profile' || params[:controller] == 'users' && params[:action] == 'children' || params[:controller] == 'users' && params[:action] == 'unlock' || params[:controller] == 'assignees' || params[:controller] == 'proofs' && params[:action] == 'index' || params[:controller] == 'notes' %>
      <%= render 'shared/scrollmenu' %>
      <%= render 'shared/flashes' %>
      <%= yield %>
    <% else %>
      <%= yield %>
    <% end %>
    <%= render 'shared/footers/home_footer' unless params[:controller] == 'after_sign_up' || params[:controller] == 'devise/sessions' || params[:controller] == 'registrations' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
    <%= yield(:after_js) %>
  </body>
</html>
