<% content_for(:navbar) do %>
  <%= render 'shared/navbars/navbar_sign_up' %>
<% end %>

<h2>Advanced Profile</h2>

<%= form_for(@user, url: user_path(@user), method: :put) do |f| %>
  <%= f.text_field :address_line_1, placeholder: 'Address Line 1' %>
  <%= f.text_field :address_line_2, placeholder: 'Address Line 2' %>
  <%= f.text_field :town, placeholder: 'Town' %>
  <%= f.text_field :country, placeholder: 'Country' %>
  <%= f.text_field :postcode, placeholder: 'Postcode' %>
  <%= f.submit 'Complete', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'back', previous_wizard_path %>

