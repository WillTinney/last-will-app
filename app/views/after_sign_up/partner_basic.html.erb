<% content_for(:navbar) do %>
  <%= render 'shared/navbars/navbar_sign_up' %>
<% end %>

<div class="navbar-box">
  <div class="container">
    <h3><%= t('Partner information') %></h3>

    <p><%= t('partner description') %></p>
  </div>
</div>

<div class="progress-width">
  <div class="row bs-wizard" style="border-bottom:0;">
    <div class="col-xs-3 bs-wizard-step complete">
      <div class="text-center bs-wizard-stepnum"><%= t('You') %></div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step active">
      <div class="text-center bs-wizard-stepnum"><%= t('Partner') %></div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step disabled">
      <div class="text-center bs-wizard-stepnum"><%= t('Children') %></div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>

    <div class="col-xs-3 bs-wizard-step disabled">
      <div class="text-center bs-wizard-stepnum"><%= t('Guardians') %></div>
      <div class="progress"><div class="progress-bar"></div></div>
      <a href="#" class="bs-wizard-dot"></a>
    </div>
  </div>
</div>

<div class="wizard-box text-center">
  <%= simple_form_for([@user, @assignee], url: wizard_path, method: :put, class: "sign-up-form") do |f| %>
    <%= f.hidden_field :type, value: 'Recipient' %>
    <%= f.hidden_field :relationship, value: 'Partner' %>
    <%= f.hidden_field :last_name, value: @user.last_name %>

    <p class="sign-up-title"><%= t('what is your partners name') %></p>

    <div class="row">
      <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
        <%= f.input :first_name, placeholder: t('First name'), label: false %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
        <div class="wizard-buttons">
          <%= link_to t('back'), previous_wizard_path, class: "back-button" %>
          <%= f.submit t('Next'), class: 'btn purple-button' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
