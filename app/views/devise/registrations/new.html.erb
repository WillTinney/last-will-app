<% content_for(:navbar) do %>
  <%= render 'shared/navbars/navbar_devise' %>
<% end %>

<div class="navbar-box">
  <div class="container">
    <h3><%= t('welcome to') %></h3>

    <p><%= t('first email and password') %></p>
  </div>
</div>

<%= render 'shared/flashes' %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <br>
      <br>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs remove-asterisk">
          <div class="row">
            <div class="col-xs-3">
              <%= f.input :title, required: true, autofocus: true, collection: ["Mr", "Mrs", "Ms"], label: t('Title') %>
            </div>

            <div class="col-xs-9">
              <%= f.input :email, required: true, autofocus: true, placeholder: "example@gmail.com", label: t('Email') %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6">
              <%= f.input :first_name, required: true, autofocus: true, placeholder: t("First name"), label: t('First name') %>
            </div>

            <div class="col-xs-6">
              <%= f.input :last_name, required: true, autofocus: true, placeholder: t("Last name"), label: t('Last name') %>
            </div>
          </div>

          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "********" %>
          <%= f.input :password_confirmation, required: true, placeholder: "********" %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, t("Sign up"), class: 'purple-button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
