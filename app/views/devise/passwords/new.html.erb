<% content_for(:navbar) do %>
  <%= render 'shared/navbars/navbar_devise' %>
<% end %>

<div class="navbar-box">
  <div class="container">
    <h3><%= t('To reset your password please enter your email below') %></h3>

    <p><%= t('recieve email in 5 minutes') %>.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <br>
      <h2><%= t('Forgot your password') %></h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, label: t('Email') %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t("Reset Password") %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
