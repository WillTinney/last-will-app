<div id="personal-details" class="details-box card">

  <%= link_to '#', class: 'profile-picture-inline' do %>
    <%= image_tag("user.png", class: "avatar-large") %>
    <p>Edit Profile Picture</p>
  <% end %>

  <%= simple_form_for(@user) do |f| %>
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <%= f.input :first_name %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <%= f.input :middle_name %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <%= f.input :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.input :citizenship %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.input :date_of_birth %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.input :email %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.input :phone_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.input :address_line_1 %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.input :address_line_2 %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <%= f.input :town %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <%= f.input :postcode %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <%= f.input :country %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-2 offset-xs-5">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>
