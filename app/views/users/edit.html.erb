<div id="personal-details" class="details-box">

  <div>
    <%= link_to '#', class: 'profile-picture-inline' do %>
      <%= image_tag(current_user.profile_picture || "user.png", class: "avatar-large") %>
      <p>Change Picture</p>
      <%= simple_form_for @user, html: {class: 'form-inline edit-profile-picture invisible'} do |f| %>
        <%= f.input :profile_picture, as: :attachinary, label: false, input_html: { class: 'profile-upload'} %>
        <%= f.submit "Upload", class: 'profile-upload'  %>
      <% end %>
    <% end %>
  </div>

  <%= simple_form_for(@user) do |f| %>
    <div class="form-container">
      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <%= f.input :first_name %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :middle_name %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :last_name %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-2">
          <%= f.input :citizenship %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :date_of_birth %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-2">
          <%= f.input :email %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :phone_number %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <%= f.input :address_line_1 %>
        </div>
        <div class="col-xs-12 col-sm-6">
          <%= f.input :address_line_2 %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <%= f.input :town %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :postcode %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= f.input :country %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
          <%= f.button :submit %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= content_for(:after_js) do %>
  <script>
    $('.profile-picture-inline').click(function(e) {
      e.preventDefault;
      console.log('hello')
      $('.edit-profile-picture').removeClass('invisible');
    });
  </script>
<% end %>
