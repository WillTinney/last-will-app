<div class="grey-box">
  <h2>Recipient Photos Page</h2>

  <h3><%= @recipient.first_name + " " + @recipient.last_name %></h3>

  <div class="blue-box">
    <p>Here include all photos associated with this recipient.</p>
  </div>

  <% @recipient.photos.each do |photo| %>
    <h4><%= photo.title %></h4>
    <p><%= photo.caption %></p>

    <div id="edit-photo-form"></div>

    <%= link_to "Edit", edit_user_recipient_photo_path(current_user, @recipient, photo.id), remote: true, class: "btn btn-transparent btn-default" %>
    <%= link_to "Delete", user_recipient_photo_path(current_user, @recipient, photo.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-transparent btn-default" %>
  <% end %>

  <%= link_to "Add Photo", new_user_recipient_photo_path(current_user, @recipient.id), remote: true, class: "btn btn-transparent btn-default" %>

  <div id="new-photo-form"></div>

</div>
