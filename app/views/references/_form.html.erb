<%= simple_form_for [current_user, @assignee, @reference] do |f| %>
  <%= f.hidden_field :assignee_id, value: params[:assignee_id] %>
  <br>
  <%= f.input :document, as: :attachinary %>
  <%= f.input :title %>
  <%= f.input :comments %>
  <%= f.button :submit, class: "purple-button pull-right" %>
<% end %>
