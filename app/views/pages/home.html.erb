<!-- Call to Registration -->

<div class="container text-center" id="registration">
  <h2><strong>Sign up now</strong></h2>
  <p>MyWill is in early stage development.<br>We are therefore not proposing live services yet.<br>
However, if you’re interested in getting inform for the live release, please sign up below</p>
  <button class="btn btn-primary signup-button">Sign up</button>
</div>

<%= content_for(:after_js) do %>
  <script>
    $(document).ready(function(){
      $(window).scroll(function(){
        if($(window).scrollTop()>400)
          $(".navbar-wagon").css({"background-color": "#57BB90", "box-shadow": "0 1px 5px 0 rgba(0,0,0,0.07),0 1px 0 0 rgba(0,0,0,0.03)"});
        else
          $(".navbar-wagon").css({"background-color": "rgba(255, 255, 255, 0.2)", "box-shadow": "none"});
      });
    });
  </script>
<% end %>
