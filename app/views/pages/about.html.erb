<% content_for(:navbar) do %>
  <%= render 'shared/navbars/navbar_home' %>
<% end %>

<!-- Banner  -->
<div class="page-section page-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url(<%= image_path('london.jpg') %>);">
  <div class="container page-banner-content">
    <h2><%= t('About Us') %></h2>
    <p><%= t('about description') %></p>
  </div>
</div>

<section class="page-section" style="background-color: #F1F1F1;">
  <div class="container">
    <h3><%= t('Our Vision') %></h3>
    <p><%=  t('vision description') %></p>
  </div>
</section>

<section class="page-section">
  <div class="container">
    <h3><%= t('Our Team') %></h3>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-2 col-md-4 col-md-offset-0">
        <div class="team-member">
          <%= image_tag('sandrine.jpg', class: 'avatar-xl') %>
          <h4>Sandrine</h4>
          <p><%= t('sandrine description') %></p>
        </div>
      </div>
      <div class="col-xs-10 col-xs-offset-2 col-md-4 col-md-offset-0">
        <div class="team-member">
          <%= image_tag('will.jpg', class: 'avatar-xl') %>
          <h4>Will</h4>
          <p><%= t('will description') %></p>
        </div>
      </div>
      <div class="col-xs-10 col-xs-offset-2 col-md-4 col-md-offset-0">
        <div class="team-member">
          <%= image_tag('julien.jpg', class: 'avatar-xl') %>
          <h4>Julien</h4>
          <p><%= t('julien description') %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<%= content_for(:after_js) do %>
  <script>
    // Navbar colour change on scroll
    $(document).ready(function(){
      $(window).scroll(function(){
        if($(window).scrollTop()>200)
          $(".navbar-wagon").css({"background-color": "#4717F6", "box-shadow": "0 1px 5px 0 rgba(0,0,0,0.07),0 1px 0 0 rgba(0,0,0,0.03)"});
        else
          $(".navbar-wagon").css({"background-color": "rgba(255, 255, 255, 0.2)", "box-shadow": "none"});
      });
    });
  </script>
<% end %>
