<div class="grey-box">
  <h2>Guardian Notes Page</h2>

  <h3><%= @guardian.first_name + " " + @guardian.last_name %></h3>

  <div class="blue-box">
    <p>Here include all notes associated with this guardian.</p>
  </div>

  <% @guardian.notes.each do |note| %>
    <h4><%= note.title %></h4>
    <p><%= note.content %></p>
    <%= link_to "Edit", edit_user_guardian_note_path(current_user, @guardian, note.id), remote: true, class: "btn btn-transparent btn-default" %>
    <%= link_to "Delete", user_guardian_note_path(current_user, @guardian, note.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-transparent btn-default" %>
  <% end %>

  <%= link_to "Add Note", new_user_guardian_note_path(current_user, @guardian.id), remote: true, class: "btn btn-transparent btn-default" %>
</div>
