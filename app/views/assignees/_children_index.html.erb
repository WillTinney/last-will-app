<br>

<div class="container-box">
  <div class="header-box">
    <h2>My Children</h2>
    <%= link_to "Add Child", new_user_assignee_path(current_user, @type), class: "btn orange-button" %>
  </div>

  <div class="assignees">
    <% @user.assignees.where('relationship = ?', 'Child').each do |assignee| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <div class="card">
          <%= link_to user_assignee_path(current_user, assignee.id) do %>
            <%= assignee.profile_picture ? cl_image_tag(assignee.profile_picture.path, transformation: [{width: 100, height: 100, gravity: "face", radius: "max", crop: "fill"}], class: "avatar-card push-right") : image_tag('user3.png', class: "avatar-card push-right") %>
            <div class="card-description">
              <h5 class="black-text"><strong><%= assignee.name_surname %></strong></h5>
              <%= link_to "View", user_assignee_path(current_user, assignee.id), class: "btn btn-info btn-default btn-ice reference-link" %>
              <%= link_to "Delete", user_assignee_path(current_user, assignee.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-danger btn-default" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
