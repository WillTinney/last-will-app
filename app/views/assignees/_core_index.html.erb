<div class="container-box">
  <div class="header-box">
    <h2>My <%= @type.capitalize %>s</h2>
    <%= link_to "Add New " + @type, new_user_assignee_path(current_user, @type), class: "btn btn-transparent btn-default button-height-default" %>
  </div>
  <div class="blue-box">
    <p><%= @type.capitalize %>s are...</p>
  </div>

  <% @assignees.where('type = ?', @type).each do |assignee| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <%= link_to user_assignee_path(current_user, assignee.id) do %>
          <%= image_tag("user2.png", class: "avatar") %>
          <div class="card-description">
            <h6><%= assignee.id %></h6>
            <h5 class="black-text"><strong><%= assignee.first_name + " " + assignee.last_name %></strong></h5>
            <%= link_to "Edit", edit_user_assignee_path(current_user, assignee.id), class: "btn btn-success btn-default" %>
            <%= link_to "Delete", user_assignee_path(current_user, assignee.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-danger btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= simple_form_for [current_user, @type] do |f| %>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :citizenship %>
    <%= f.input :date_of_birth %>
    <%= f.input :email %>
    <%= f.input :phone_number %>
    <%= f.input :address_line_1 %>
    <%= f.input :address_line_2 %>
    <%= f.input :town %>
    <%= f.input :postcode %>
    <%= f.input :country %>
    <%= f.input :profile_picture %>
    <%= f.input :relationship %>
    <%= f.button :submit %>
  <% end %>

</div>
