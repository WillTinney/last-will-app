<div class="container-box">
  <div class="header-box">
    <h2>My <%= @type.capitalize %>s</h2>
    <%= link_to "Add New " + @type, new_user_assignee_path(current_user, @type), remote: true, class: "btn btn-transparent btn-default button-height-default" %>
  </div>

  <div class="blue-box">
    <p><%= @type.capitalize %>s are...</p>
  </div>

  <div class="assignees">
    <% @assignees.where('type = ?', @type).each do |assignee| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <%= link_to user_assignee_path(current_user, assignee.id) do %>
            <%= image_tag(assignee.profile_picture  || "user.png", class: "avatar-card push-right") %>
            <div class="card-description">
              <h5 class="black-text"><strong><%= assignee.first_name + " " + assignee.last_name %></strong></h5>
              <%= link_to "View", user_assignee_path(current_user, assignee.id), class: "btn btn-info btn-default btn-ice reference-link" %>
              <%= link_to "Delete", user_assignee_path(current_user, assignee.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-danger btn-default" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
