<div class="container-box">
  <h2>Family and Friends</h2>

  <div class="blue-box">
    <p>Here you add family and friends who...</p>
  </div>

  <h3>My Partner</h3>

  <% @assignees.where('type = ? and relationship = ?', @type, 'Partner').each do |recipient| %>
    <div class="col-xs-12 col-md-6">
      <div class="card">
        <%= link_to user_recipient_path(current_user, recipient.id), class: 'recipient-link profile-picture-inline' do %>
          <div class="card-avatar">
            <%= image_tag("user2.png", class: "avatar-card") %>
          </div>
        <% end %>

        <div class="card-description">
          <h6><%= recipient.id %></h6>
          <h5><%= recipient.first_name + " " + recipient.last_name %></h5>
        </div>

        <div class="card-buttons">
          <%= link_to "Edit", edit_user_recipient_path(current_user, recipient.id), class: "btn btn-transparent btn-default" %>
          <%= link_to "Delete", user_recipient_path(current_user, recipient.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-transparent btn-default" %>
        </div>
      </div>
    </div>
  <% end %>

  <h3>My Children</h3>

  <% @assignees.where('type = ? and relationship = ?', @type, 'Child').each do |recipient| %>
    <div class="detail-box">
      <div class="detail">
        <%= link_to user_recipient_path(current_user, recipient.id), class: 'recipient-link profile-picture-inline' do %>
          <%= image_tag("user.png", class: "avatar") %>
          <h6><%= recipient.id %></h6>
          <h5><%= recipient.first_name + " " + recipient.last_name %></h5>
        <% end %>
      </div>
      <div class="detail">
        <p><strong>Relationship:</strong> <%= recipient.relationship %></p>
      </div>
      <div class="detail">
        <%= link_to "Edit", edit_user_recipient_path(current_user, recipient.id), class: "btn btn-transparent btn-default" %>
        <%= link_to "Delete", user_recipient_path(current_user, recipient.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-transparent btn-default" %>
      </div>
    </div>
  <% end %>

  <h3>Other Family Members</h3>

  <% @assignees.where('type = ? and relationship = ?', @type, 'Mother').each do |recipient| %>
    <div class="detail-box">
      <div class="detail">
        <%= link_to user_recipient_path(current_user, recipient.id), class: 'recipient-link profile-picture-inline' do %>
          <%= image_tag("user2.png", class: "avatar") %>
          <h6><%= recipient.id %></h6>
          <h5><%= recipient.first_name + " " + recipient.last_name %></h5>
        <% end %>
      </div>
      <div class="detail">
        <p><strong>Relationship:</strong> <%= recipient.relationship %></p>
      </div>
      <div class="detail">
        <%= link_to "Edit", edit_user_recipient_path(current_user, recipient.id), class: "btn btn-transparent btn-default" %>
        <%= link_to "Delete", user_recipient_path(current_user, recipient.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-transparent btn-default" %>
      </div>
    </div>
  <% end %>

  <h3>My Friends</h3>

  <% @assignees.where('type = ? and relationship = ?', @type, 'Friend').each do |recipient| %>
    <div class="detail-box">
      <div class="detail">
        <%= link_to user_recipient_path(current_user, recipient.id), class: 'recipient-link profile-picture-inline' do %>
          <%= image_tag("user.png", class: "avatar") %>
          <h6><%= recipient.id %></h6>
          <h5><%= recipient.first_name + " " + recipient.last_name %></h5>
        <% end %>
      </div>
      <div class="detail">
        <p><strong>Relationship:</strong> <%= recipient.relationship %></p>
      </div>
      <div class="detail">
        <%= link_to "Edit", edit_user_recipient_path(current_user, recipient.id), class: "btn btn-transparent btn-default" %>
        <%= link_to "Delete", user_recipient_path(current_user, recipient.id), data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-transparent btn-default" %>
      </div>
    </div>
  <% end %>

  <%= link_to "Add New Friend or Family Member", new_user_assignee_path(current_user, @type), class: "btn btn-transparent btn-default" %>

</div>
